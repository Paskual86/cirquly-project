@model IEnumerable<CirqulyProject.Core.Features.Articles.ViewModels.ArticleViewModel>

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2>Our Articles</h2>
        <p class="text-muted">Browse our preloved collection</p>
    </div>

    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">

                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title">@article.Title</h5>

                        <p class="card-text text-success fw-bold fs-5">
                            @article.Price.ToString("C")
                        </p>

                        <div class="mt-auto">
                            <a asp-action="Details"
                               asp-route-id="@article.Id"
                               class="btn btn-dark w-100">
                                View Details
                            </a>
                        </div>

                    </div>

                </div>
            </div>
        }
    </div>

</div>